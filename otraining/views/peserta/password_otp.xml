<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="page_peserta_password_otp">
        <t t-call="website.layout">
            <style>
    /* Optional custom styles */
    .login-container {
      max-width: 400px;
      margin: auto;
      margin-top: 100px;
    }
            </style>
            <div class="container py-4">
                <div class="row">
                    <div class="container login-container">
                        <h2 class="text-center mb-4">Masukkan OTP</h2>
                        <p>
            Masukkan OTP yang telah kami kirimkan ke email Anda pada kotak di bawah
                        </p>
                        <form>
                            <div class="mb-3">
                                <label for="email" class="form-label">OTP</label>
                                <input type="email" class="form-control" id="email" placeholder="Masukkan Kode OTP"/>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                            <button type="submit" class="btn btn-primary btn-block">Resend OTP (59)</button>
                        </form>
                    </div>
                </div>
            </div>

        </t>
    </template>
</odoo>
