<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="page_registrasi_corporat">
        <t t-call="website.layout">
            <style>
                .profile-label {
                    min-width: 150px;
                    display: inline-block;
                }

                .foto-profile {
                    max-width: 100%;
                }

                @media (max-width: 768px) {
                .float-sm-start {
                    float: left !important;
                }
                
                .float-sm-end {
                    float: right !important;
                }
                }

                @media (min-width: 768px) {
                .float-md-start {
                    float: left !important;
                }
                
                .float-md-end {
                    float: right !important;
                }
                }
            </style>
            <div class="container py-4">
                <div class="">
                    <!-- Photo -->
                    <!-- Profile Information -->
                    <div class="d-flex mb-3">
                        <div class="col-md-9 col-sm-12 float-md-start float-sm-end  ">
                            <!-- Profile Name -->
                            <h1 class="mb-5">Registrasi</h1>

                            <div class="mb-3 me-3">
                                <div class="d-flex align-items-center">
                                    <div class="profile-label">Tipe</div>
                                    <div class="profile-info flex-grow-1">
                                        <div class="row">
                                            <div class="">
                                                <label>
                                                    <input type="radio" name="tipe_pendaftaran" value="1" />
                                                    Pribadi
                                                </label>
                                                <label>
                                                    <input type="radio" name="tipe_pendaftaran" value="2" checked="1"/>
                                                    Perusahaan
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Profile Information -->
                            <div>
                                <div class="mb-3 me-3">
                                    <div class="d-flex align-items-center">
                                        <div class="profile-label">Nama</div>
                                        <div class="profile-info flex-grow-1">
                                            <input type="text" class="form-control" name="name" value="Luna Maya"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3 me-3">
                                    <div class="d-flex align-items-center">
                                        <div class="profile-label">Email</div>
                                        <div class="profile-info flex-grow-1">
                                            <input type="text" class="form-control" name="name" value="lunamaya@gmail.com"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3 me-3">
                                    <div class="d-flex align-items-center">
                                        <div class="profile-label">Phone</div>
                                        <div class="profile-info flex-grow-1">
                                            <input type="text" class="form-control" name="name" value="0812.5000.1234"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3 me-3">
                                    <div class="d-flex align-items-center">
                                        <div class="profile-label">Alamat</div>
                                        <div class="profile-info flex-grow-1">
                                            <textarea class="form-control" name="name">Jalan Denpasar Selatan No. 55, Kuta, Bali</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- CORPORAT start -->
                            <div class="mb-3 me-3">
                                <div class="d-flex align-items-center">
                                    <div class="profile-label"></div>
                                    <div class="profile-info flex-grow-1">
                                        <hr/>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3 me-3">
                                <div class="d-flex align-items-center">
                                    <div class="profile-label">Nama Perusahaan</div>
                                    <div class="profile-info flex-grow-1">
                                        <input type="text" class="form-control" name="name" value="PT. Sinar Rahayu Abadi"/>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3 me-3">
                                <div class="d-flex align-items-center">
                                    <div class="profile-label">Alamat</div>
                                    <div class="profile-info flex-grow-1">
                                        <textarea class="form-control" name="name">Jalan Denpasar Selatan No. 55, Kuta, Bali</textarea>
                                    </div>
                                </div>
                            </div>
                            <!-- CORPORAT ends -->
                            
                            <div class="mb-3 me-3">
                                <a href="/peserta/profile/edit" class="btn btn-primary">Daftar</a>
                            </div>

                        </div>

                        <div class="col-md-3 col-sm-12 float-md-end float-sm-start  ">
                            <div class="text-center text-md-end mb-3 mb-md-0 float-md-start">
                                <img src="/otraining/static/images/profile/luna-maya.jpg" alt="Profile Photo" class="foto-profile img-thumbnail"/>

                                <button class="btn btn-sm btn-primary">Edit Foto</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
