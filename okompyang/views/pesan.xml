<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ini untuk tampilan form (editor) -->
        <record id="okompyang_pesan_form" model="ir.ui.view">
            <field name="name">okompyang.pesan.form.view</field>
            <field name="model">okompyang.pesan</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="OK" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
